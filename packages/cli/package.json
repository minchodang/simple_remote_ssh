{
    "name": "simple-remote-ssh",
    "version": "0.1.2",
    "description": "Simple and convenient SSH connection CLI tool",
    "author": "minchodang <minsu910725@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/minchodang/simple_remote_ssh.git",
        "directory": "packages/cli"
    },
    "homepage": "https://github.com/minchodang/simple_remote_ssh#readme",
    "bugs": {
        "url": "https://github.com/minchodang/simple_remote_ssh/issues"
    },
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "simple-ssh": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/cli.js",
        "start:dev": "tsx src/cli.ts",
        "clean": "rm -rf dist",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:unit": "vitest run tests/unit",
        "test:integration": "pnpm build && vitest run tests/integration",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major",
        "prepublishOnly": "node -e \"if (!process.env.CI) { console.log('‚ùå Use GitHub Actions for publishing! Run: git push origin main'); process.exit(1); }\""
    },
    "keywords": [
        "ssh",
        "cli",
        "remote",
        "connection"
    ],
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "inquirer": "^9.2.12",
        "node-ssh": "^13.1.0",
        "ora": "^7.0.1"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^20.10.0",
        "@vitest/coverage-v8": "^1.0.0",
        "tsx": "^4.20.5",
        "typescript": "5.5.4",
        "vitest": "^1.0.0"
        "typescript": "5.5.4"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "files": [
        "dist/**/*.js",
        "dist/**/*.d.ts",
        "dist/**/*.d.ts.map",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "license": "MIT"
}
